@inject SignInManager<IdentityUser> signInManager;

@{
    ViewData["Title"] = "Home Page";
}
@section login{
    <div class="d-flex flex-row justify-content-end p-3">
        @if (signInManager.IsSignedIn(User))
        {
            <form method="post" asp-action="logout" asp-controller="home">
                <button type="submit" class="btn btn-dark" style="width:auto">
                    Logout @User.Identity.Name
                </button>
            </form>
        }
        else
        {
            <div>
                <button id="btnShowModal" type="button" class="btn btn-dark mr-2">Sign In</button>
                <div class="modal fade" tabindex="-1" id="loginModal"
                     data-keyboard="false" data-backdrop="static">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">
                                    ×
                                </button>
                            </div>
                            <div class="modal-body">
                                <form>
                                    <div class="form-group">
                                        <input class="form-control" type="text"
                                               placeholder="Login Username" id="inputUserName" />
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" placeholder="Login Password"
                                               type="password" id="inputPassword" />
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <a type="button" class="btn btn-dark" asp-controller="Home" asp-action="SignIn">
                                    Sign
                                </a>
                                <button type="button" id="btnHideModal" class="btn btn-dark">
                                    Hide
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <a asp-controller="Home" asp-action="Registration" class="btn btn-dark">Register</a>
        }
    </div>
    <script type="text/javascript">

        $(document).ready(function () {
            $("#btnShowModal").click(function () {
                $("#loginModal").modal('show');
            });

            $("#btnHideModal").click(function () {
                $("#loginModal").modal('hide');
            });
        });
    </script>
}

