@inject SignInManager<IdentityUser> signInManager;
@model LoginViewModel

@{
    ViewData["Title"] = "Home Page";
}
@section login{
    <div class="d-flex flex-row justify-content-end p-3">
        @if (signInManager.IsSignedIn(User))
        {
            <form method="post" asp-action="logout" asp-controller="home">
                <button type="submit" class="btn btn-dark" style="width:auto">
                    Logout @User.Identity.Name
                </button>
            </form>
        }
        else
        {
            <div>
                <button id="btnShowModal" type="button" class="btn btn-dark mr-2">Sign In</button>
                <div class="modal fade" tabindex="-1" id="loginModal"
                     data-keyboard="false" data-backdrop="static">
                    <form method="post">

                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">
                                        ×
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="Email"></label>
                                        <input asp-for="Email" class="form-control" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Password"></label>
                                        <input asp-for="Password" class="form-control" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <div class="custom-checkbox">
                                            <label asp-for="RememberMe">
                                                <input asp-for="RememberMe" />
                                                @Html.DisplayNameFor(m => m.RememberMe)
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-dark" asp-controller="Home" asp-action="Index">
                                        Login
                                    </button>
                                    <button type="button" id="btnHideModal" class="btn btn-dark">
                                        Hide
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <a asp-controller="Home" asp-action="Registration" class="btn btn-dark">Register</a>
        }
    </div>
    <script type="text/javascript">

        $(document).ready(function () {
            $("#btnShowModal").click(function () {
                $("#loginModal").modal('show');
            });

            $("#btnHideModal").click(function () {
                $("#loginModal").modal('hide');
            });
        });
    </script>
}

<style type="text/css">
    img {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translateX(-50%) translateY(-50%);
        max-width: 600px;
        max-height: auto;
    }
</style>

<meta name="viewport" content="width=device-width, initial-scale=1.0" />

