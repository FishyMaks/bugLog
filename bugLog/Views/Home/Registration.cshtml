@model RegisterViewModel
@{
    Layout = null;
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
<div class="container-fluid">
    <div class="d-flex h-100 align-items-center">
        <div class="col-6 p-0 bg-white d-flex flex-column">
            <div class="d-flex align-items-center h-100 p-5 text-left justify-content-center">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="flex-row text-center">
                        <a asp-area="" asp-controller="Home" asp-action="index" class="btn btn-dark">Cancel</a>
                        <button type="submit" class="btn btn-dark">Register</button>
                    </div>
                </form>
            </div>
        </div>
        <img class="float-left p-1" style="position:absolute; top:8px; width: 400px; pointer-events:none" src="~/images/Logo2.png">
        <div class="col-6 p-0 h-100" style="background:#00CED1">
            <div class="d-flex flex-column justify-content-center h-100 p-5 justify-content-center">
                <div class="d-flex justify-content-start text-capitalize text-black-50" style="font-size:24px">
                    Keep your friends close
                </div>
                <div class="d-flex justify-content-end text-capitalize text-black-50 font-weight-bold" style="font-size:16px">
                    ...and your bugs closer
                </div>
            </div>
        </div>
    </div>
</div>
