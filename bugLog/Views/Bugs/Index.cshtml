@model IEnumerable<bugLog.Models.Bug>

@{
    ViewData["Title"] = "Index";
}

<h1>Bugs</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AssignedToTeamId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BugReportedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BugTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BugDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BugStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BugSeverity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BugCreatedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BugClosedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BugResolutionSummary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BugAssignedToNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BugClosedByNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BugCreatedByNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AssignedToTeamId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BugReportedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BugTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BugDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BugStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BugSeverity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BugCreatedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BugClosedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BugResolutionSummary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BugAssignedToNavigation.DisplayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BugClosedByNavigation.DisplayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BugCreatedByNavigation.DisplayName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BugId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BugId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BugId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
